<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:src="@drawable/man"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/profilfe_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/ic_user"
        android:drawablePadding="8dp"
        android:elevation="8dp"
        android:hint="Your name"
        android:padding="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.271"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/profilfe_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/ic_gmail"
        android:drawablePadding="8dp"
        android:elevation="8dp"
        android:hint="Email"
        android:padding="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilfe_name"
        app:layout_constraintVertical_bias="0.104"
        app:layout_constraintWidth_percent=".8" />
    <EditText
        android:id="@+id/profilfe_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="8dp"
        android:elevation="8dp"
        android:hint="Số điện thoại"
        android:padding="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilfe_email"
        app:layout_constraintVertical_bias="0.104"
        app:layout_constraintWidth_percent=".8" />
    <EditText
        android:id="@+id/profilfe_diaChi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/ic_marker"
        android:drawablePadding="8dp"
        android:elevation="8dp"
        android:hint="Địa chỉ"
        android:padding="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilfe_phone"
        app:layout_constraintVertical_bias="0.104"
        app:layout_constraintWidth_percent=".8" />
</androidx.constraintlayout.widget.ConstraintLayout>